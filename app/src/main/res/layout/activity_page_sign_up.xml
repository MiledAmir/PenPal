<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_clr"
    tools:context=".PageSignUp">


    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="182dp"
        android:layout_height="144dp"
        android:layout_marginTop="16dp"
        android:rotationY="-182"
        android:src="@drawable/page2asset1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="182dp"
        android:layout_height="144dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/page2asset1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_asset"
        android:layout_width="159dp"
        android:layout_height="141dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_corner"
        android:hint="Fullname"
        android:paddingLeft="20dp"
        android:shadowColor="@color/white"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/title_clr"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_asset" />

    <EditText
        android:id="@+id/newemail"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:shadowColor="@color/white"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/title_clr"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname" />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:shadowColor="@color/white"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/title_clr"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newemail" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/square_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Sign Up"
        android:textColor="@color/text_clr"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpassword" />

    <Button
        android:id="@+id/google_connect_signun"
        android:layout_width="322dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_button"
        android:drawableLeft="@drawable/google_icon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Continue with Google"
        android:textColor="@color/text_clr"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_btn" />

    <TextView
        android:id="@+id/sign_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"

        android:layout_marginEnd="1dp"
        android:layout_marginBottom="52dp"
        android:text="@string/haveacc"
        android:textColor="@color/text_clr"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signin"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="52dp"
        android:text="@string/btn_signin"
        android:textColor="@color/text_clr"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sign_in_text" />


</androidx.constraintlayout.widget.ConstraintLayout>